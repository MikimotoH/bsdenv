[extensions]
graphlog = 
prompt = /root/hg-prompt/prompt.py

[ui]
merge = vimdiff

[merge-tools]
vimdiff.executable = vim
vimdiff.args = -d $base $local $output $other +close +close


[alias]
log = log -r :
slog = log -r : --style=/root/elsvent/mercurial-cli-templates/map-cmdline.slog
nlog = log -r : --style=/root/elsvent/mercurial-cli-templates/map-cmdline.nlog
sglog = glog --style=/root/elsvent/mercurial-cli-templates/map-cmdline.sglog
